{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json", "src/**/*.dash.json"],
  "exclude": ["src/**/*.snapshot.test.ts", "src/**/*.snapshot.json"],
  "references": [
    { "path": "../sdk-data" },
    { "path": "../sdk-rest-client" },
    { "path": "../sdk-query-client" },
    { "path": "../sdk-common" },
    { "path": "../sdk-tracking" },
    { "path": "../sdk-pivot-query-client" },
    { "path": "../sdk-pivot-ui" },
    { "path": "./tsconfig.node.json" }
  ]
}
