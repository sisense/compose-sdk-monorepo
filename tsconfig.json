{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES6",
    "lib": ["es6", "dom", "es7"],
    "experimentalDecorators": true,
    "strict": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      // workaround for vscode-jest plugin - it requires to have esm module's typedefs instead of cjs
      "ts-deepmerge": ["node_modules/ts-deepmerge/esm/index"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": [
    "docs/",
    "docs-internal/",
    "node_modules",
    "./node_modules/*",
    "lib",
    "**/*.test.*",
    ".vscode",
    "**/__test_helpers__/**"
  ]
}
